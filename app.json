{
  "name": "dsw-site",
  "description": "Denver Startup Week Website, Scheduler, and Admin Tools",
  "repository": "https://github.com/denverstartupweek/dsw-site",
  "scripts": { },
  "env": {
    "JEMALLOC_ENABLED": true
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "stack": "cedar-14",
  "addons": [
    "sendgrid:starter",
    "heroku-postgresql:hobby-dev",
    "heroku-redis:hobby-dev",
    "memcachier:dev"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/gaffneyc/heroku-buildpack-jemalloc.git"
    },
    {
      "url": "https://github.com/ello/heroku-buildpack-cmake.git"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "postdeploy": "bundle exec rake db:schema:load db:seed"
}
