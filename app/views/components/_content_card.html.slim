- header_image = card[:header_image] || "https://cdn-images-1.medium.com/max/800/1*amnvhplMQHkIrq_iYD8GUA.jpeg"

div.ContentCard
  .ContentCard-image(class="#{card[:color]}-border" style="background-image: url(#{header_image})")
  .ContentCard-content
    div.ContentCard-header(class="#{card[:color]}-fill")
      - if card[:track].present?
        = render partial: "icons/#{card[:icon]}"
      h3.ContentCard-title(class="#{card[:color]}-font") #{card[:title]}
    div.ContentCard-inner-content
      - if card[:description].kind_of?(Array)
        - card[:description].each do |desc|
          p.ContentCard-description #{desc}
      - else
        p.ContentCard-description #{card[:description]}
      .ContentCard-action
        - if card[:button_title].present? && card[:button_page_url].include?("https://") || card[:button_page_url].include?("mailto:") 
          = link_to "#{card[:button_title]}", "#{page_url}", :target => "_blank", class: 'ContentCard-link' 
        - elsif card[:button_title].present?
          = link_to "#{card[:button_title]}", page_path(page: "#{page_url}"), class: 'ContentCard-link'
        - else
          = link_to "Explore the #{title}", page_path(page: "#{page_url}"), class: 'ContentCard-link'
